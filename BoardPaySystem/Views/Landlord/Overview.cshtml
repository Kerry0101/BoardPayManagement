@{
    ViewData["Title"] = "Overview";
    Layout = "_LandlordLayout";
}

<div class="content-section">
    <div class="section-header">
        <h3>
            <span>
                <i class="bi bi-grid-1x2-fill"></i>
                Dashboard Overview
            </span>
        </h3>
    </div>

    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            <i class="bi bi-exclamation-triangle-fill"></i>
            @TempData["Error"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }

    <div class="dashboard-grid">
        <!-- Buildings Overview Card -->
        <div class="dashboard-card">
            <div class="card-header">
                <h4><i class="bi bi-buildings text-primary"></i> Buildings Overview</h4>
                <span class="badge bg-primary">@ViewBag.BuildingsCount</span>
            </div>
            <div class="card-body">
                <div class="stat-item">
                    <span><i class="bi bi-layers"></i> Total Floors</span>
                    <span class="stat-value">@ViewBag.FloorsCount</span>
                </div>
                <div class="stat-item">
                    <span><i class="bi bi-door-open"></i> Total Rooms</span>
                    <span class="stat-value">@ViewBag.RoomsCount</span>
                </div>
                <div class="stat-item">
                    <span><i class="bi bi-people"></i> Total Tenants</span>
                    <span class="stat-value">@ViewBag.TenantsCount</span>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="ManageBuildings" class="btn btn-outline-primary btn-sm w-100">
                    <i class="bi bi-building-add"></i> Manage Buildings
                </a>
            </div>
        </div>

        <!-- Room Status Card -->
        <div class="dashboard-card">
            <div class="card-header">
                <h4><i class="bi bi-door-closed text-success"></i> Room Status</h4>
                <span class="badge bg-success">@ViewBag.TotalRooms Total</span>
            </div>
            <div class="card-body">
                <div class="stat-item">
                    <span><i class="bi bi-person-check"></i> Occupied</span>
                    <span class="stat-value text-success">@ViewBag.OccupiedRooms</span>
                </div>
                <div class="stat-item">
                    <span><i class="bi bi-person-dash"></i> Vacant</span>
                    <span class="stat-value text-danger">@ViewBag.VacantRooms</span>
                </div>
                <div class="progress mt-3" style="height: 10px;">
                    <div class="progress-bar bg-success" role="progressbar" style="width: @ViewBag.OccupancyRate%;" 
                         aria-valuenow="@ViewBag.OccupancyRate" aria-valuemin="0" aria-valuemax="100">
                    </div>
                </div>
                <div class="text-center mt-2">
                    <small class="text-muted">@ViewBag.OccupancyRate% Occupancy Rate</small>
                </div>
            </div>
        </div>

        <!-- Contracts Card -->
        @* <div class="dashboard-card">
